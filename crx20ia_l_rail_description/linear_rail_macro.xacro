<?xml version="1.0" ?>
<robot xmlns:xacro="http://wiki.ros.org/xacro">
  <xacro:macro 
  name="linear_rail_7th_axis" 
  params="prefix=''
          parent
          *origin
          rail_length:=6.0"
  >  
    <!-- Rail Base Link - Fixed to ground/parent (stationary rail structure) -->
    <link name="${prefix}rail_base">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://fanuc_crx_description/meshes/linear_rail/visual/crx_rail.dae"/>
        </geometry>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <box size="0.3 ${rail_length} 0.2"/>
        </geometry>
      </collision>
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 3.14"/>
        <mass value="500.0"/>
        <inertia ixx="${500.0 * rail_length * rail_length / 12.0}" ixy="0.0" ixz="0.0" 
                 iyy="10.0" iyz="0.0" 
                 izz="${500.0 * rail_length * rail_length / 12.0}"/>
      </inertial>
    </link>

    <!-- Rail Carriage Link - Moves along the rail (this is what slides) -->
    <link name="${prefix}rail_carriage">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://fanuc_crx_description/meshes/linear_rail/visual/crx_carriage.dae"/>
        </geometry>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <box size="0.4 0.4 0.3"/>
        </geometry>
      </collision>
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="150.0"/>
        <inertia ixx="5.0" ixy="0.0" ixz="0.0" 
                 iyy="5.0" iyz="0.0" izz="5.0"/>
      </inertial>
    </link>

    <!-- Prismatic Joint J7 - Linear motion along Y-axis -->
    <!-- The carriage moves from 0 to rail_length along the Y axis -->
    <joint name="${prefix}J7" type="prismatic">
      <origin xyz="0 0 0" rpy="0 0 0"/>  <!-- Carriage sits on top of rail -->
      <parent link="${prefix}rail_base"/>
      <child link="${prefix}rail_carriage"/>
      <axis xyz="0 1 0"/>  <!-- Motion along Y-axis -->
      <limit lower="0.0" 
             upper="${rail_length}" 
             effort="5000.0" 
             velocity="1.0" />
      <dynamics damping="150.0" friction="50.0"/>
    </joint>

    <!-- Robot Mounting Point - sits on top of carriage -->
    <link name="${prefix}rail_mount">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="0.1"/>
        <inertia ixx="0.001" ixy="0.0" ixz="0.0" 
                 iyy="0.001" iyz="0.0" izz="0.001"/>
      </inertial>
    </link>

    <!-- Fixed joint from carriage to mounting point -->
    <!-- Mount point is on top of the carriage where the robot base will attach -->
    <joint name="${prefix}carriage_to_mount" type="fixed">
      <origin xyz="0 0 0" rpy="0 0 0"/>  <!-- On top of carriage -->
      <parent link="${prefix}rail_carriage"/>
      <child link="${prefix}rail_mount"/>
    </joint>

    <!-- Attach rail base to parent -->
    <joint name="${prefix}rail_base_joint" type="fixed">
      <xacro:insert_block name="origin" />
      <parent link="${parent}" />
      <child link="${prefix}rail_base" />
    </joint>

  </xacro:macro>
</robot>

